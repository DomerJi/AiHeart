<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="45dp"
        android:layout_height="1dp"
        android:layout_marginRight="8dp"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_hint"
        app:layout_constraintRight_toLeftOf="@id/tv_service_hint"
        app:layout_constraintTop_toTopOf="@id/tv_service_hint" />

    <TextView
        android:id="@+id/tv_service_hint"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:paddingTop="26dp"
        android:paddingBottom="26dp"
        android:text="本服务由天和防务\n认知神经科学研发中心提供技术支持"
        android:textColor="#ccc"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />


    <View
        android:layout_width="45dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="@id/tv_service_hint"
        app:layout_constraintLeft_toRightOf="@id/tv_service_hint"
        app:layout_constraintTop_toTopOf="@id/tv_service_hint" />


</androidx.constraintlayout.widget.ConstraintLayout>