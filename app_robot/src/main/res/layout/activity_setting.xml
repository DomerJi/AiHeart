<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.set.SettingActivity">

    <com.thfw.robotheart.view.TitleRobotView
        android:id="@+id/titleRobotView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleBarView"
        app:trv_centerText="@string/me_setting"
        tools:ignore="MissingConstraints,NotSibling" />


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_navigation"
        app:layout_constraintTop_toBottomOf="@id/titleRobotView">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/navigation_tab_bg_normal"
        android:orientation="horizontal"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:weightSum="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.18">

        <TextView
            android:id="@+id/tv_set_net"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_net"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />


        <TextView
            android:id="@+id/tv_set_volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_volume"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />


        <TextView
            android:id="@+id/tv_set_speech"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_speech"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_set_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_light"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_set_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_blue"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />


        <TextView
            android:id="@+id/tv_set_dormant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector"
            android:gravity="center"
            android:text="@string/set_dormant"
            android:textColor="@drawable/common_textcolor_white_black_selector"
            android:textSize="@dimen/textSize" />

        <RelativeLayout
            android:id="@+id/rl_set_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/navigation_tab_selector">

            <TextView
                android:id="@+id/tv_new_version_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_set_update"
                android:layout_alignRight="@id/tv_set_update"
                android:layout_marginLeft="16dp"
                android:background="@drawable/new_version_bg"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="æ–°"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_set_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/set_update"
                android:textColor="@drawable/common_textcolor_white_black_selector"
                android:textSize="@dimen/textSize" />


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>