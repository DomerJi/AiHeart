<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/transparent_overlay"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5dp"
        android:paddingBottom="@dimen/_5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center">

            <TextView
                android:id="@+id/mood_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:text="@string/emotion_mood"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mood_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center">

            <TextView
                android:id="@+id/dominant_emotion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5dp"
                android:text="@string/dominant_emotion"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dominant_emotion_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emotions_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_overlay"
        android:paddingBottom="@dimen/_5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/anger_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_anger"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/anger_progressBar"
                style="@style/greenProgressBar"
                android:layout_width="@dimen/metrics_progressbar_width"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp" />


            <TextView
                android:id="@+id/joy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_joy"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/joy_progressBar"
                style="@style/greenProgressBar"
                android:layout_width="@dimen/metrics_progressbar_width"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp" />

            <TextView
                android:id="@+id/neutral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_neutral"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/neutral_progressBar"
                style="@style/greenProgressBar"
                android:layout_width="@dimen/metrics_progressbar_width"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_sadness"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/sadness_progressBar"
                style="@style/greenProgressBar"
                android:layout_width="@dimen/metrics_progressbar_width"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_surprise"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/surprise_progressBar"
                style="@style/greenProgressBar"
                android:layout_width="@dimen/metrics_progressbar_width"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/emotion_valence"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/metrics_title_text_size"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/valence_progressBar"
                    android:layout_width="@dimen/metrics_progressbar_width"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:minHeight="8dip"
                    android:padding="0dp"
                    android:progressDrawable="@drawable/progress_bar_horizontal" />

                <ProgressBar
                    android:id="@+id/valence_progressBarNegative"
                    android:layout_width="@dimen/metrics_progressbar_width"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:minHeight="8dip"
                    android:padding="0dp"
                    android:progressDrawable="@drawable/progress_bar_horizontal_red" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
