<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_login_center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/login_radius_bg"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingTop="80dp"
        android:paddingRight="100dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="账号登录"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/textSize_login_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_wihte_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_input_mobile"
                android:paddingLeft="8dp"
                android:textColor="@color/text_common"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/textSize_large" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="26dp"
            android:background="@drawable/radius_wihte_bg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_toLeftOf="@id/iv_see_password"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_input_password"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textColor="@color/text_common"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/textSize_large" />


            <ImageView
                android:id="@+id/iv_see_password"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/see_password_selector" />

        </RelativeLayout>


        <Button
            android:id="@+id/bt_login"
            style="@style/common_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="8dp"
            android:text="登录"
            android:textSize="@dimen/textSize_large" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="12dp"
                android:text="忘记密码？"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_by_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@mipmap/ic_login_by_face"
        android:drawablePadding="4dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="刷脸登录"
        android:textColor="@color/colorRobotFore"
        android:textSize="@dimen/textSize_robot_title"
        app:layout_constraintRight_toLeftOf="@id/tv_login_by_mobile"
        app:layout_constraintTop_toTopOf="@id/ll_login_center" />


    <TextView
        android:id="@+id/tv_login_by_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@mipmap/ic_login_password"
        android:drawablePadding="4dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="免密登录"
        android:textColor="@color/colorRobotFore"
        android:textSize="@dimen/textSize_robot_title"
        app:layout_constraintRight_toRightOf="@id/ll_login_center"
        app:layout_constraintTop_toTopOf="@id/ll_login_center" />


    <include layout="@layout/layout_login_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>