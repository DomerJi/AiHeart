<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRobotPrimary</item>
        <item name="colorPrimaryDark">@color/colorRobotPrimary</item>
        <item name="colorAccent">@color/colorRobotAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_robot_divider</item>
        <item name="android:windowBackground">@drawable/robot_page_bg</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

        <item name="android:windowFullscreen">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ChatTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRobotPrimary</item>
        <item name="colorPrimaryDark">@color/colorRobotPrimary</item>
        <item name="colorAccent">@color/colorRobotAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_robot_divider</item>
        <item name="android:windowBackground">@drawable/robot_page_bg</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:overScrollMode">never</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRobotPrimary</item>
        <item name="colorPrimaryDark">@color/colorRobotPrimary</item>
        <item name="colorAccent">@color/colorRobotAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_robot_divider</item>
        <item name="android:windowBackground">@drawable/login_bg</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

        <item name="android:windowFullscreen">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name = "CameraBridgeViewBase" >
        <attr name="show_fps" format="boolean"/>
        <attr name="camera_id" format="integer" >
            <enum name="any" value="-1" />
            <enum name="back" value="99" />
            <enum name="front" value="98" />
        </attr>
    </declare-styleable>
</resources>