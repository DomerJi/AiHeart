<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRobotPrimary</item>
        <item name="colorPrimaryDark">@color/colorRobotPrimary</item>
        <item name="colorAccent">@color/colorRobotAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_robot_divider</item>
        <item name="android:windowBackground">@drawable/robot_page_bg</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

        <item name="android:windowFullscreen">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

