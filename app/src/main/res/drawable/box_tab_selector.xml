<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/text_green" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.5dp" android:color="@color/text_green_80" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</selector>