<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:windowBackground">@color/page_background_white</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- 用于纯白背景的页面-->
    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 分割线主题颜色设置 -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:windowBackground">@color/page_background_white</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="HomeTabText">
        <item name="android:textColor">@drawable/home_tab_textcolor_selector</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="BoxTabText">
        <item name="android:textColor">@drawable/box_tab_textcolor_selector</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:background">@drawable/box_tab_selector</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!--activity 底部弹出-->
    <style name="AnimActivity" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/anim_translate_bottom</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="anim_translate_bottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_fade</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_fade</item>
        <item name="android:activityCloseExitAnimation">@anim/exit</item>
    </style>

</resources>
