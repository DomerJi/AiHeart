<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    tools:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/exercise_listitem_border"
        android:paddingRight="16dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_bg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/divider_2px"
            android:layout_marginTop="@dimen/divider_2px"
            android:layout_marginBottom="@dimen/divider_2px"
            android:scaleType="centerCrop"
            android:src="@mipmap/cat"
            app:riv_corner_radius_bottom_left="3dp"
            app:riv_corner_radius_top_left="3dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/riv_bg"
            android:text="@string/title"
            android:textColor="@color/text_common"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/riv_bg"
            android:text="@string/title"
            android:textColor="@color/text_green"
            android:textSize="@dimen/textSize_product" />

        <TextView
            android:id="@+id/tv_aready_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/riv_bg"
            android:text="@string/title"
            android:textColor="@color/text_content"
            android:textSize="@dimen/textSize_product" />

        <Button
            android:id="@+id/bt_begin"
            style="@style/common_button"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:text="开始练习"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_product" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>