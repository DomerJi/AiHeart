<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:text="@string/bigText2"
        android:textColor="@color/text_common"
        android:textSize="@dimen/textSize_password"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_hint_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textColor="@color/text_content"
            android:textSize="@dimen/textSize" />

        <ImageView
            android:id="@+id/iv_expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_expand_more"
            app:tint="@color/text_content" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/bigText2"
        android:textColor="@color/text_content"
        android:textSize="@dimen/textSize"
        app:layout_constraintTop_toBottomOf="@id/ll_hint_expand" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/ic_video_start" />

        <TextView
            android:id="@+id/tv_star_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7890"
            android:textColor="@color/text_content"
            android:textSize="@dimen/textSize_product" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/ic_video_collect" />

        <TextView
            android:id="@+id/tv_collect_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7890"
            android:textColor="@color/text_content"
            android:textSize="@dimen/textSize_product" />


        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/ic_video_share" />

        <TextView
            android:id="@+id/tv_share_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7890"
            android:textColor="@color/text_content"
            android:textSize="@dimen/textSize_product" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>