<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thfw.mobileheart.activity.audio.AudioEtcActivity">

    <com.thfw.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tv_centerText="@string/sort_type_listening"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_height"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@mipmap/ic_share_white"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="@dimen/navigation_height"
        android:layout_height="@dimen/navigation_height"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:src="@mipmap/ic_collect_white"
        app:layout_constraintRight_toLeftOf="@id/iv_share" />


    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleView">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_etc_banner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/cat"
            app:riv_corner_radius="@dimen/corner_large"
            app:riv_oval="false" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/riv_etc_banner"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_large" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/riv_etc_banner"
            android:text="@string/bigText2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_small" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="75"
        android:textColor="@color/text_red"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="篇内容"
        android:textColor="@color/text_content"
        android:textSize="@dimen/textSize_product"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_number"
        app:layout_constraintLeft_toRightOf="@id/tv_content_number" />


    <include
        layout="@layout/custom_refresh_recyclerview_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_number" />


</androidx.constraintlayout.widget.ConstraintLayout>