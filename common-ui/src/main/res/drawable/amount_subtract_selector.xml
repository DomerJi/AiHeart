<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/divider_2px" android:color="@color/black_40" />
            <solid android:color="@color/black_20" />
            <corners android:bottomLeftRadius="@dimen/corner_small" android:topLeftRadius="@dimen/corner_small" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="@dimen/divider_2px" android:color="@color/black_40" />
            <corners android:bottomLeftRadius="@dimen/corner_small" android:topLeftRadius="@dimen/corner_small" />
        </shape>
    </item>

</selector>