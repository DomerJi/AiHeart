<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.LhXkSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.thfw.ui.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tv_centerText="@string/set_voice_focus"
            app:tv_rightText="恢复默认"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/ll_face_focus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            tools:ignore="MissingConstraints"
            tools:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="人脸焦点跟随"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_large" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/switch_face_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1px"
            android:background="@color/divider"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:id="@+id/ll_focus_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_background_gray"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <LinearLayout
                android:id="@+id/ll_focus_m"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_height"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="视野距离"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_focus_m_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    tools:text="3米" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1px"
                android:background="@color/divider"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/ll_focus_no_see_model"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_height"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="别看我了【记忆人数】"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_focus_no_see_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    tools:text="单人" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1px"
                android:background="@color/divider"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/ll_focus_no_see"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_height"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="别看我了【记忆时长】"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_focus_no_see_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    tools:text="1分钟" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1px"
                android:background="@color/divider"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_height"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            tools:ignore="MissingConstraints"
            tools:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="语音识别"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_large" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/switch_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1px"
            android:background="@color/divider"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/ll_voice_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_background_gray"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <LinearLayout
                android:id="@+id/ll_voice_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_height"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="文字上屏"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switch_voice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1px"
                android:background="@color/divider"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/ll_voice_text_gravity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_height"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleView"
                tools:ignore="MissingConstraints"
                tools:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="文字上屏【位置】"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_voice_text_gravity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    tools:text="1分钟" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1px"
                android:background="@color/divider"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>