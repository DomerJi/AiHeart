<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/robot_search_bg"
    android:orientation="horizontal"
    tools:layout_height="@dimen/robot_search_height">


    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="left|center_vertical"
        android:imeOptions="actionSearch"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:textColor="@color/robot_search_border_color"
        android:textSize="16sp"
        tools:text="搜索" />


    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:tint="@color/robot_search_border_color" />


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="@dimen/robot_search_height"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/search_icon_bg"
        android:padding="10dp"
        android:src="@drawable/ic_home_search"
        app:tint="@color/robot_search_bg" />

</LinearLayout>