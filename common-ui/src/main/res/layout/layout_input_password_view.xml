<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_edit_height">


    <ImageView
        android:id="@+id/iv_see_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/see_password_selector" />

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="@dimen/input_et_icon_height"
        android:layout_height="@dimen/input_et_icon_height"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_loading" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_see_password"
        android:layout_toRightOf="@id/iv_flag"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:hint="@string/please_input_password"
        android:inputType="textPassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_2px"
        android:layout_alignParentBottom="true"
        android:background="@color/black_40" />

</RelativeLayout>