<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TongueActivity"
    tools:ignore="MissingDefaultResource">

    <com.thfw.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tv_centerText="面诊"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/text_red"
        android:minHeight="80dp"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_face_left"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:minHeight="80dp"
        app:layout_constraintLeft_toRightOf="@id/iv_face"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_face_right"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/text_yellow"
        android:minHeight="80dp"
        app:layout_constraintLeft_toRightOf="@id/iv_face_left"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_request"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:text="请求"
        app:layout_constraintLeft_toRightOf="@id/iv_face_right"
        app:layout_constraintTop_toBottomOf="@id/titleView"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_face"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>